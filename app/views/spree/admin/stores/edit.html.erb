<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= I18n.t('spree.editing_store') %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to I18n.t('spree.back_to_store_list'), spree.admin_stores_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_store_edit_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @store } %>
</div>

<div data-hook="admin_store_edit_form">
  <%= form_for [:admin, @store], :html => {:multipart => true} do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>

      <div class="clear"></div>

      <div data-hook="admin_store_edit_form_buttons">
        <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
      </div>
    </fieldset>
  <% end %>
</div>
